<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.bb.domain.stadiums.StadiumsDao">

	<insert id="insert">
		insert into stadiums(stadiumsName, teamsId, createdAt)
		VALUES(#{stadiumsName}, #{teamsId}, NOW());
	</insert>

	<select id="findAll"
		resultType="site.metacoding.bb.domain.stadiums.StadiumsDao">
		SELECT * FROM stadiums
	</select>
	
	<select id="findAllToDto"
		resultType="site.metacoding.bb.web.dto.response.stadiums.ListDto">
		SELECT s.id, s.stadiumsName, s.createdAt
		FROM stadiums s
	</select>

	<select id="findById"
		resultType="site.metacoding.bb.web.dto.response.stadiums.ListDto">
		SELECT s.id, s.stadiumsName, s.createdAt
		FROM stadiums s WHERE id = #{id}
	</select>

	<delete id="delete">
		DELETE FROM stadiums WHERE id = #{id}
	</delete>

</mapper>